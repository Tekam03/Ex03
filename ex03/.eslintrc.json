{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": "off",
        "no-console": "off",
        "func-names": "off",
        "no-var": "error",
        "no-param-reassign": [2, { "props": false }],
        "no-plusplus": [2, { "allowForLoopAfterthoughts" : true }]
    }
}
